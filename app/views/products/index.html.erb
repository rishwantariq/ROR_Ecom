<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if current_user %>
    <%= link_to 'New Product', new_category_product_path(@category) %>
  <% end %>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.price %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.category.type_category %></td>
        <td><%= link_to 'Show', [@category, product] %></td>

        <% if current_user %>

          <% if policy(product).destroy? %>
            <td><%= link_to 'Destroy', [@category, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(product).update? %>
            <td><%= link_to 'Edit', edit_category_product_path(@category, product) %></td>
          <% end %>

        <%end%>

        <td><%= link_to 'Show Category', [@category] %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

