<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if current_user%>
    <td><%= link_to 'New Category', new_user_category_path(@user) %></td>
  <% end %>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.type_category, category_products_path(category) %></td>

        <% if current_user %>
          <% if policy(category).destroy? %>
            <td><%= link_to 'Destroy',  [@user, category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          <% if policy(category).update? %>
            <td><%= link_to 'Edit', edit_user_category_path(@user,category) %></td>
          <% end %>

        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>

<br>



